{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [
    {
      "column": 80,
      "color": "#66ff6650"
    }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.formatOnSave": true,
  // "prettier.singleQuote": true,
  // "prettier.semi": false,
  // "prettier.tabWidth": 2,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
